<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    tools:context=".Clientes.ClientesNew">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="top"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <EditText
                        android:id="@+id/txtCodCliente"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.79"
                        android:background="@drawable/rounded_edittext"
                        android:editable="false"
                        android:hint="Codigo"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorPrimary"
                        android:textStyle="bold"></EditText>

                    <EditText
                        android:id="@+id/txtCodLetra"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="0.79"
                        android:background="@drawable/rounded_edittext"
                        android:editable="false"
                        android:hint="Codigo Letra"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textColorHint="@color/Red"
                        android:textStyle="bold"></EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <EditText
                        android:id="@+id/txtNombCliente"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Nombre"
                        android:inputType="text"
                        android:maxLines="1"></EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <EditText
                        android:id="@+id/txtCedulaB"
                        android:layout_width="5dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Cedula"
                        android:inputType="text"
                        android:maxLength="16"
                        android:maxLines="1"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <EditText
                        android:id="@+id/txtDirCliente"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="0.66"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Direccion"
                        android:inputType="textMultiLine"
                        android:maxLines="4"
                        android:scrollbars="vertical"></EditText>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                    <TextView
                        android:id="@+id/lblDpto"
                        android:layout_width="150dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/borde_campos_pedidos"
                        android:text="Departamento"
                        android:textColor="@color/colorAccent"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                    <Spinner
                        android:id="@+id/cboDpto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        ></Spinner>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:id="@+id/lblMuni"
                        android:layout_width="150dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/borde_campos_pedidos"
                        android:text="Municipio"
                        android:textColor="@color/colorAccent"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                    <Spinner
                        android:id="@+id/cboMun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        ></Spinner>
                </LinearLayout>
